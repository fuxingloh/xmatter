{
  "name": "@workspace/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "format": "prettier --write .",
    "lint": "turbo run lint -- --fix",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 120
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.5.25",
    "@swc/jest": "^0.2.36",
    "@types/node": "^24",
    "@workspace/eslint-config": "workspace:*",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.1",
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.7.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": "^24"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
