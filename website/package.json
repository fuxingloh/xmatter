{
  "name": "@workspace/website",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "bun --bun next build",
    "clean": "rm -rf .next",
    "dev": "bun --bun next dev",
    "lint": "eslint .",
    "start": "bun --bun next start"
  },
  "lint-staged": {
    "!(*.{js,jsx,ts,tsx})": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-packagejson"
    ],
    "printWidth": 120,
    "tailwindFunctions": [
      "clsx",
      "cva",
      "cx"
    ]
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "next": "16.1.4",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "remove-markdown": "^0.6.3",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "xmatter": "workspace:*"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "19.2.8",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4.1.18"
  }
}
