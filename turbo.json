{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "agent": {
      "inputs": ["tsconfig.json", "./**/*.ts"],
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["tsconfig.json", "./**/*.ts"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["tsconfig.json", "./**/*.ts", "./**/*.test.ts"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "outputLogs": "errors-only"
    }
  }
}
